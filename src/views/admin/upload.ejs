<body>
<div class="container">

  <!-- Upload Section -->
  <h2>Upload IAS Questions</h2>

  <div class="upload-box">
    <form method="POST"
          action="/admin/upload-questions"
          enctype="multipart/form-data">
      <input type="file" name="file" accept=".xlsx" required />
      <br/><br/>
      <button type="submit">Upload Excel</button>
    </form>
  </div>


</div>
