<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Referrals | ProjectSVU Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
</head>

<body>

  <div class="container-fluid">
    <div class="row">

      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block bg-body-tertiary sidebar collapse p-3">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
          <ion-icon name="planet" class="fs-4 me-2"></ion-icon>
          <span class="fs-5 fw-bold">ProjectSVU</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/admin/dashboard" class="nav-link link-body-emphasis">
              <ion-icon name="grid-outline"></ion-icon> Dashboard
            </a>
          </li>
          <li>
            <a href="/admin/questions" class="nav-link link-body-emphasis">
              <ion-icon name="list-outline"></ion-icon> Questions
            </a>
          </li>
          <li>
            <a href="/admin/upload" class="nav-link link-body-emphasis">
              <ion-icon name="cloud-upload-outline"></ion-icon> Upload
            </a>
          </li>
          <li>
            <a href="/admin/referrals" class="nav-link active">
              <ion-icon name="people-outline"></ion-icon> Referrals
            </a>
          </li>
        </ul>
        <hr>
        <div class="dropdown">
          <a href="/admin/logout" class="d-flex align-items-center link-body-emphasis text-decoration-none text-danger">
            <ion-icon name="log-out-outline" class="me-2"></ion-icon> <strong>Sign Out</strong>
          </a>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
        <h1 class="h2 mb-4">Referral Partners</h1>

        <% if (referrers.length===0) { %>
          <div class="card shadow-sm border-0 text-center py-5">
            <div class="card-body">
              <ion-icon name="people-circle-outline" class="display-1 text-secondary mb-3"></ion-icon>
              <h4 class="text-body-secondary">No referrals found</h4>
              <p class="text-secondary">Partners will appear here once they generate activity.</p>
            </div>
          </div>
          <% } %>

            <div class="row g-4">
              <% referrers.forEach(r=> { %>
                <div class="col-xl-4 col-md-6">
                  <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">

                      <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                          <h5 class="card-title mb-1">
                            <%= r.name %>
                          </h5>
                          <p class="card-text text-secondary small">
                            <%= r.email %>
                          </p>
                        </div>
                        <div class="text-end">
                          <h4 class="text-success fw-bold mb-0">â‚¹<%= r.referralEarnings %>
                          </h4>
                          <small class="text-secondary text-uppercase" style="font-size: 0.7rem;">Earned</small>
                        </div>
                      </div>

                      <div class="bg-body-tertiary rounded p-3 mb-3 d-flex justify-content-between">
                        <div>
                          <small class="d-block text-secondary" style="font-size: 0.7rem;">CODE</small>
                          <span class="font-monospace fw-bold text-primary">
                            <%= r.referralCode %>
                          </span>
                        </div>
                        <div class="text-end">
                          <small class="d-block text-secondary" style="font-size: 0.7rem;">REFERRALS</small>
                          <span class="fw-bold">
                            <%= r.referralCount %>
                          </span>
                        </div>
                      </div>

                      <h6 class="text-secondary small mb-2">Referred Users</h6>

                      <% if (r.referredUsers.length> 0) { %>
                        <div class="border rounded overflow-hidden" style="max-height: 200px; overflow-y: auto;">
                          <table class="table table-sm table-striped mb-0 small">
                            <thead class="table-dark sticky-top">
                              <tr>
                                <th class="px-2">User</th>
                                <th class="px-2">Plan</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% r.referredUsers.forEach(u=> { %>
                                <tr>
                                  <td class="px-2">
                                    <%= u.name %>
                                  </td>
                                  <td class="px-2">
                                    <% if (u.subscription==='premium' ) { %>
                                      <span class="badge text-bg-success">Premium</span>
                                      <% } else { %>
                                        <span class="badge text-bg-secondary">Free</span>
                                        <% } %>
                                  </td>
                                </tr>
                                <% }) %>
                            </tbody>
                          </table>
                        </div>
                        <% } else { %>
                          <p class="text-secondary fst-italic small">No active users yet.</p>
                          <% } %>

                    </div>
                  </div>
                </div>
                <% }) %>
            </div>

      </main>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>