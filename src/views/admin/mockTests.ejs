<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mock Tests | ProjectSVU Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
</head>

<body>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-body-tertiary sidebar collapse p-3">
                <a href="/"
                    class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                    <ion-icon name="planet" class="fs-4 me-2"></ion-icon>
                    <span class="fs-5 fw-bold">ProjectSVU</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="/admin/dashboard" class="nav-link link-body-emphasis">
                            <ion-icon name="grid-outline"></ion-icon> Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/admin/questions" class="nav-link link-body-emphasis">
                            <ion-icon name="list-outline"></ion-icon> Questions
                        </a>
                    </li>
                    <li>
                        <a href="/admin/mock-tests" class="nav-link active">
                            <ion-icon name="school-outline"></ion-icon> Mock Tests
                        </a>
                    </li>
                    <li>
                        <a href="/admin/upload" class="nav-link link-body-emphasis">
                            <ion-icon name="cloud-upload-outline"></ion-icon> Upload
                        </a>
                    </li>
                    <li>
                        <a href="/admin/referrals" class="nav-link link-body-emphasis">
                            <ion-icon name="people-outline"></ion-icon> Referrals
                        </a>
                    </li>
                </ul>
                <hr>
                <div class="dropdown">
                    <a href="/admin/logout"
                        class="d-flex align-items-center link-body-emphasis text-decoration-none text-danger">
                        <ion-icon name="log-out-outline" class="me-2"></ion-icon> <strong>Sign Out</strong>
                    </a>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Mock Tests</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/create-mock-test" class="btn btn-primary d-flex align-items-center">
                            <ion-icon name="add-circle-outline" class="me-2"></ion-icon> Create New
                        </a>
                    </div>
                </div>

                <div class="table-responsive shadow-sm rounded">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col" style="width: 40%;">Title</th>
                                <th scope="col">Duration (mins)</th>
                                <th scope="col">Questions</th>
                                <th scope="col">Created At</th>
                                <th scope="col">Status</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (mockTests.length===0) { %>
                                <tr>
                                    <td colspan="6" class="text-center py-4">No mock tests created yet.</td>
                                </tr>
                                <% } %>
                                    <% mockTests.forEach(test=> { %>
                                        <tr>
                                            <td>
                                                <div class="fw-bold">
                                                    <%= test.title %>
                                                </div>
                                                <small class="text-secondary">
                                                    <%= test.description %>
                                                </small>
                                            </td>
                                            <td>
                                                <%= test.duration %> mins
                                            </td>
                                            <td>
                                                <%= test.questions.length %>
                                            </td>
                                            <td>
                                                <%= new Date(test.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <% if (test.isActive) { %>
                                                    <span class="badge rounded-pill text-bg-success">Active</span>
                                                    <% } else { %>
                                                        <span
                                                            class="badge rounded-pill text-bg-secondary">Inactive</span>
                                                        <% } %>
                                            </td>
                                            <td class="text-end">
                                                <a href="/admin/mock-tests/<%= test._id %>/edit"
                                                    class="btn btn-sm btn-outline-primary d-inline-flex align-items-center me-1">
                                                    <ion-icon name="create-outline"></ion-icon>
                                                </a>
                                                <form method="post" action="/admin/mock-tests/<%= test._id %>/delete"
                                                    style="display:inline"
                                                    onsubmit="return confirm('Delete this mock test?');">
                                                    <button
                                                        class="btn btn-sm btn-outline-danger d-inline-flex align-items-center">
                                                        <ion-icon name="trash-outline"></ion-icon>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </main>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>